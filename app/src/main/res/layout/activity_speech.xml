<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Speech">

    <Button android:id="@+id/speech_toggle"
        android:layout_height="40dp"
        android:layout_width="500dp"
        android:text="Start!"/>
    <TextView android:id="@+id/text0"
        android:layout_height="40dp"
        android:layout_width="500dp"
        android:layout_below="@id/speech_toggle"
        android:text="결과1" />
    <TextView android:id="@+id/text1"
        android:layout_height="40dp"
        android:layout_width="500dp"
        android:layout_below="@id/text0"
        android:text="결과2" />
    <TextView android:id="@+id/text2"
        android:layout_height="40dp"
        android:layout_width="500dp"
        android:layout_below="@id/text1"
        android:text="결과3" />

</RelativeLayout>
